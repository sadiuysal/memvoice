[flake8]
max-line-length = 88
extend-ignore = 
    # Allow line breaks before binary operators (W503)
    W503,
    # Allow line breaks after binary operators (W504)  
    W504,
    # Allow wildcard imports in __init__.py files
    F403,
    F405
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    alembic/versions/
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py: F401 